---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const coaches = await getCollection('coaches');
---

<BaseLayout
  title="Our Coaches"
  description="Meet the Foundation Tennis coaching team. Qualified, experienced coaches dedicated to helping kids develop their tennis skills."
>
  <div class="coaches-page">
    <h1>Meet Our Coaches</h1>
    <p class="intro">Qualified coaches who love tennis and love working with kids. Every coach brings experience, energy, and a genuine passion for player development.</p>

    <div class="coaches-grid">
      {coaches.map(async (coach) => {
        const { Content } = await coach.render();
        return (
          <article class="coach-card">
            <div class="coach-photo">
              <div class="photo-placeholder">Photo coming soon</div>
            </div>
            <div class="coach-content">
              <h2>{coach.data.name}</h2>
              <p class="coach-title">{coach.data.title}</p>
              <div class="coach-body">
                <Content />
              </div>
            </div>
          </article>
        );
      })}
    </div>

    <section class="cta-section">
      <h2>Train With Us</h2>
      <p>Book a trial lesson and meet our coaches in person.</p>
      <a href="/contact" class="cta-primary">Book a Free Trial</a>
    </section>
  </div>
</BaseLayout>

<style>
  .coaches-page {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--primary);
    margin-bottom: 0.5rem;
  }

  .intro {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 3rem;
  }

  .coaches-grid {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .coach-card {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 2rem;
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  }

  .coach-photo {
    width: 200px;
    height: 200px;
    border-radius: 8px;
    overflow: hidden;
  }

  .photo-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--secondary) 0%, var(--primary) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
  }

  .coach-content h2 {
    margin-bottom: 0.25rem;
    color: var(--text);
  }

  .coach-title {
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .coach-body :global(h1) {
    display: none; /* Hide the h1 from markdown since we have our own */
  }

  .coach-body :global(h2) {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .coach-body :global(p) {
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  .coach-body :global(blockquote) {
    border-left: 3px solid var(--primary);
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
    color: #555;
  }

  .coach-body :global(ul) {
    margin: 1rem 0;
    padding-left: 1.25rem;
  }

  .coach-body :global(li) {
    margin-bottom: 0.25rem;
  }

  .cta-section {
    text-align: center;
    background: var(--text);
    color: white;
    padding: 3rem;
    border-radius: 8px;
    margin-top: 3rem;
  }

  .cta-section h2 {
    color: white;
  }

  .cta-section p {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .cta-primary {
    display: inline-block;
    background: var(--primary);
    color: white;
    padding: 1rem 2rem;
    border-radius: 4px;
    font-weight: 700;
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .coach-card {
      grid-template-columns: 1fr;
    }

    .coach-photo {
      width: 150px;
      height: 150px;
      margin: 0 auto;
    }

    .coach-content {
      text-align: center;
    }

    .coach-body :global(blockquote) {
      text-align: left;
    }
  }
</style>
