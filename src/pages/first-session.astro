---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const firstSession = await getEntry('pages', 'first-session');
const { Content } = await firstSession.render();
---

<BaseLayout
  title="Your First Tennis Lesson - What to Expect"
  description="Everything you need to know before your child's first tennis lesson at Foundation Tennis in Somerton Park."
  metaTitle={firstSession.data.metaTitle}
  metaDescription={firstSession.data.metaDescription}
>
  <div class="first-session-page">
    <article class="page-content">
      <Content />
    </article>

    <section class="cta-section">
      <h2>Ready to Book?</h2>
      <p>Contact us to arrange your child's free trial lesson.</p>
      <div class="cta-buttons">
        <a href="/contact" class="cta-primary">Book a Trial</a>
        <a href="/programs" class="cta-secondary">View Programs</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .first-session-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .page-content :global(h1) {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    color: var(--primary);
  }

  .page-content :global(h2) {
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .page-content :global(h3) {
    font-size: 1.1rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--primary);
  }

  .page-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .page-content :global(strong) {
    color: var(--text);
  }

  .page-content :global(a) {
    color: var(--accent);
    font-weight: 600;
  }

  .page-content :global(a:hover) {
    color: var(--primary);
  }

  .page-content :global(ul), .page-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .page-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .page-content :global(hr) {
    border: none;
    border-top: 1px solid #ddd;
    margin: 2rem 0;
  }

  /* Highlight boxes for key info */
  .page-content :global(h2 + p strong:first-child) {
    display: block;
    background: white;
    padding: 1rem;
    border-radius: 8px;
    border-left: 4px solid var(--primary);
    margin-bottom: 0.5rem;
  }

  .cta-section {
    text-align: center;
    background: var(--text);
    color: white;
    padding: 3rem;
    border-radius: 8px;
    margin-top: 3rem;
  }

  .cta-section h2 {
    color: white;
    margin-bottom: 0.5rem;
  }

  .cta-section p {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-primary {
    display: inline-block;
    background: var(--primary);
    color: white;
    padding: 1rem 2rem;
    border-radius: 4px;
    font-weight: 700;
    text-decoration: none;
    transition: transform 0.2s;
  }

  .cta-primary:hover {
    transform: translateY(-2px);
  }

  .cta-secondary {
    display: inline-block;
    background: transparent;
    color: white;
    padding: 1rem 2rem;
    border: 2px solid white;
    border-radius: 4px;
    font-weight: 600;
    text-decoration: none;
    transition: background 0.2s;
  }

  .cta-secondary:hover {
    background: rgba(255,255,255,0.1);
  }

  @media (max-width: 768px) {
    .page-content :global(h1) {
      font-size: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
