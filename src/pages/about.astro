---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const about = await getEntry('pages', 'about');
const { Content } = await about.render();
---

<BaseLayout
  title="About Foundation Tennis"
  description="Learn about Foundation Tennis, our coaching philosophy, and why families in Somerton Park have trusted us since 2009."
  metaTitle={about.data.metaTitle}
  metaDescription={about.data.metaDescription}
>
  <article class="page-content">
    <Content />
  </article>
</BaseLayout>

<style>
  .page-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem;
    position: relative;
  }

  /* Blue gradient background accent */
  .page-content::before {
    content: '';
    position: fixed;
    top: 60px;
    left: 0;
    right: 0;
    height: 400px;
    background: linear-gradient(180deg, rgba(107, 179, 217, 0.08) 0%, transparent 100%);
    z-index: -1;
    pointer-events: none;
  }

  .page-content :global(h1) {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    color: var(--primary);
  }

  .page-content :global(h2) {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--horizon-blue);
  }

  .page-content :global(h3) {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .page-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .page-content :global(blockquote) {
    border-left: 4px solid var(--horizon-blue);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #555;
    background: rgba(107, 179, 217, 0.05);
    padding: 1rem 1.5rem;
    border-radius: 0 8px 8px 0;
  }

  .page-content :global(ul), .page-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .page-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .page-content :global(strong) {
    color: var(--text);
  }

  .page-content :global(a) {
    color: var(--horizon-blue);
  }

  .page-content :global(hr) {
    border: none;
    border-top: 2px solid rgba(107, 179, 217, 0.3);
    margin: 2rem 0;
  }
</style>
