---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingIsland from '../components/booking/BookingIsland';
---

<BaseLayout
  title="Book a Session - Foundation Tennis Development"
  description="Browse our weekly tennis lesson schedule and book online. View availability and enroll your child at Somerton Park Tennis Club."
  metaTitle="Book Tennis Lessons | Foundation Tennis Development"
  metaDescription="Browse available tennis sessions at Somerton Park Tennis Club. Select a program, choose your child, and book online with instant confirmation."
>
  <div class="schedule-page">
    <div class="schedule-header">
      <h1>Weekly Schedule & Booking</h1>
      <p class="intro">Browse available sessions, select a program, and book online. Need help choosing? <a href="/contact">Contact us</a> for a free trial.</p>
    </div>

    <!-- React Booking Island -->
    <BookingIsland client:load />
  </div>
</BaseLayout>

<style>
  .schedule-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .schedule-header {
    background: linear-gradient(135deg, var(--horizon-blue) 0%, rgba(107, 179, 217, 0.7) 100%);
    padding: 2.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    text-align: center;
  }

  .schedule-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: white;
  }

  .schedule-header .intro {
    font-size: 1.1rem;
    color: rgba(255,255,255,0.9);
    margin-bottom: 0;
  }

  .schedule-header .intro a {
    color: white;
    font-weight: 600;
    text-decoration: underline;
  }

  .schedule-header .intro a:hover {
    color: var(--natural-cream);
  }

  @media (max-width: 768px) {
    .schedule-page {
      padding: 1rem;
    }

    .schedule-header {
      padding: 1.5rem;
    }

    .schedule-header h1 {
      font-size: 1.75rem;
    }
  }
</style>
