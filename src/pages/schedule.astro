---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingIsland from '../components/booking/BookingIsland';
---

<BaseLayout
  title="Book a Session - Foundation Tennis"
  description="Browse our weekly tennis lesson schedule and book online. View availability and enroll your child at Somerton Park Tennis Club."
  metaTitle="Book Tennis Lessons | Foundation Tennis"
  metaDescription="Browse available tennis sessions at Somerton Park Tennis Club. Select a program, choose your child, and book online with instant confirmation."
>
  <div class="schedule-page">
    <h1>Book a Session</h1>
    <p class="intro">Browse available sessions, select a program, and book online. Need help choosing? <a href="/contact">Contact us</a> for a free trial.</p>

    <!-- React Booking Island -->
    <BookingIsland client:load />
  </div>
</BaseLayout>

<style>
  .schedule-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .schedule-page > h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--primary);
  }

  .intro {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .intro a {
    color: var(--accent);
    font-weight: 600;
  }

  .intro a:hover {
    color: var(--primary);
  }

  @media (max-width: 768px) {
    .schedule-page {
      padding: 1rem;
    }

    .schedule-page > h1 {
      font-size: 2rem;
    }
  }
</style>
