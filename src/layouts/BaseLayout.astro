---
import '../styles/tailwind.css';

interface Props {
  title: string;
  description?: string;
  metaTitle?: string;
  metaDescription?: string;
  ogTitle?: string;
  ogDescription?: string;
}

const {
  title,
  description = "Professional tennis coaching for kids in Somerton Park, Adelaide",
  metaTitle,
  metaDescription,
  ogTitle,
  ogDescription
} = Astro.props;

const pageTitle = metaTitle || title;
const pageDescription = metaDescription || description;
const socialTitle = ogTitle || pageTitle;
const socialDescription = ogDescription || pageDescription;
---

